<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="@drawable/botton_sheet_background"
    android:padding="20dp">
    <TextView
        android:id="@+id/headingDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Otp Verification"
        android:textSize="22sp"
        android:textAlignment="center" />
    <EditText
        android:id="@+id/txt_input"
        android:maxLength="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter The Phone Number"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <Button
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorSecendory"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:id="@+id/btn_cancel"/>
        <Button
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/colorSecendory"
            android:text="Resend"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_weight="1"
            android:id="@+id/btn_resend"/>
        <Button
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/colorSecendory"
            android:text="Okay"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_weight="1"
            android:id="@+id/btn_okay"/>

    </LinearLayout>

</LinearLayout>